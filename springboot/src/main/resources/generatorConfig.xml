<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "https://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="PostgreSQL" targetRuntime="MyBatis3Simple">
        <!-- 开启驼峰命名（数据库字段user_name → 实体类属性userName） -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- 注释生成策略（去除默认注释，可选） -->
        <commentGenerator>
            <!-- 不生成注释 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 不生成日期注释 -->
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- PGSQL JDBC 连接配置 -->
        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://localhost:5432/postgres?currentSchema=lmp&amp;useUnicode=true&amp;characterEncoding=utf8"
                        userId="postgres"
                        password="123456">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!-- 类型解析器：适配PG数据类型 + Java 8 时间类型 -->
        <javaTypeResolver type="org.mybatis.generator.internal.types.JavaTypeResolverDefaultImpl">
            <!-- 开启 JSR310：PG TIMESTAMP → LocalDateTime，DATE → LocalDate -->
            <property name="useJSR310Types" value="true"/>
            <!-- 强制DECIMAL→BigDecimal（PG numeric类型适配） -->
            <property name="forceBigDecimals" value="false"/>
            <!-- PG特有：是否将SMALLINT映射为Short（默认false→Integer） -->
            <property name="useShortForTinyInt" value="true"/>
            <property name="javaFileEncoding" value="UTF-8"/>
        </javaTypeResolver>

        <!-- 实体类生成配置 -->
        <javaModelGenerator targetPackage="com.xjtu.springboot.pojo"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <!-- 去除字符串前后空格 -->
            <property name="trimStrings" value="true"/>
            <property name="xmlFileEncoding" value="UTF-8"/>
        </javaModelGenerator>

        <!-- Mapper XML生成配置 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- Mapper接口生成配置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.xjtu.springboot.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 注意：schema="lmp" 指定会生成对应的子目录 -->
        <!-- generatedKey：PG的BIGSERIAL自增主键，sqlStatement="PostgreSQL" -->

